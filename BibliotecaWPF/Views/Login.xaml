<Window x:Class="BibliotecaWPF.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BibliotecaWPF.Views"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <Label Content="CPF:" HorizontalAlignment="Left" Margin="23,67,0,0" VerticalAlignment="Top" FontFamily="Consolas" FontWeight="Bold"/>
        <Label Content="Senha:" HorizontalAlignment="Left" Margin="23,96,0,0" VerticalAlignment="Top" FontFamily="Consolas" FontWeight="Bold"/>
        <Label Content="Login" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontFamily="Consolas" FontWeight="Bold" FontSize="20"/>
        <TextBox x:Name="TxtCPFlogin" HorizontalAlignment="Left" Margin="64,70,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="134"/>
        <TextBox x:Name="TxtSenhaLogin" HorizontalAlignment="Left" Margin="78,99,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnLogin" Content="Entrar" HorizontalAlignment="Left" Margin="141,138,0,0" VerticalAlignment="Top" FontFamily="Consolas" FontWeight="Bold" FontSize="16" Click="btnLogin_Click"/>
    </Grid>
</Window>
