<Window x:Class="BibliotecaWPF.Views.FormPrincipal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BibliotecaWPF.Views"
        mc:Ignorable="d"
        Title="Minha Biblioteca" Height="450" Width="800" WindowStyle="ToolWindow" FontFamily="Arial" FontWeight="Bold" FontStyle="Normal" Closing="Window_Closing">
    <Grid>
        <Menu Margin="10,10,10,403" Padding="10,0,0,0" VerticalAlignment="Top">
            <MenuItem x:Name="Login" Header="Login" Click="MenuItem_Click"/>
            <MenuItem x:Name="CadastrarUsuario" Header="Cadastrar usuário" Click="CadastrarUsuario_Click"/>
            <MenuItem x:Name="MenuSair" Header="Sair" Click="MenuSair_Click"/>
        </Menu>

    </Grid>
</Window>
